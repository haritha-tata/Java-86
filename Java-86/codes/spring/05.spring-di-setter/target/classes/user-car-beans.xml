<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="car-type-1" class="co.edureka.spring.core.beans.Car">
		<property name="model" value="BMW"/>
		<property name="cost" value="4200000"/>
	</bean>
	
	<bean id="user-sunil" class="co.edureka.spring.core.beans.User">
		<property name="firstName" value="Sunil"/>
		<property name="lastName" value="Joseph"/>
		<property name="car" ref="car-type-1"/>
	</bean>
</beans>
