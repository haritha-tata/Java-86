<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="apollo" class="co.edureka.spring.core.beans.Hospital">
		<property name="hospitalName" value="Apollo Hospitals Limited"/>
		<property name="departments">
			<set>
				<value>Reception</value>
				<value>Out-Patient</value>
				<value>In-Patient</value>
				<value>Operation Theater</value>
				<value>Pharmacy</value>
				<value>Reception</value>
			</set>
		</property> 
	</bean>
</beans>
