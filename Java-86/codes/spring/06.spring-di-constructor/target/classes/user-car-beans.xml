<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="car-type-1" class="co.edureka.spring.core.beans.Car">
		<constructor-arg value="Audi"/>
		<constructor-arg value="5700000"/>
	</bean>
	
	<bean id="user-sunil" class="co.edureka.spring.core.beans.User">
		<constructor-arg value="Sunil"/>
		<constructor-arg value="Joseph"/>
		<constructor-arg ref="car-type-1" />
	</bean>
</beans>
